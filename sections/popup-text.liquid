<style>
.popup-wrapper{
  position: relative;
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.disappear{
  display: none!important;
}
.popup-content{
  position: absolute;
  width: 100vw;
  height: 100vh;
  background-color: #ffffffd6;
  z-index: 100;
  contain: content;
  display: flex;
  align-items: center;
  justify-content: center;
  top: -645px;
}
.popup-content__text{
  text-align: center;
  width: 27%;
}
.popup-btn{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  cursor: pointer;
  position: absolute;
  z-index: 1000;
}

@media only screen and (max-width: 1024px) {
  .popup-content__text{
    font-size: medium;
    width: 56%;
  }
}
@media only screen and (max-width: 425px) {
  .popup-content__text{
    font-size: small;
    width: 80%;
  }
}

</style>

<div class="popup-wrapper">
  <div class="popup-content disappear">
    <div class="popup-content__text">
      {{ section.settings.paragraph }}
    </div>
  </div>
  <div class="popup-btn">
    {% if section.settings.button_label %}
      <p>{{section.settings.button_label}}</p>
    {% else %}
      <p>Button Label</p>
    {% endif %}
  </div>
</div>

<script>
  const clickBtn = document.querySelector('.popup-btn')
  const popupContent = document.querySelector('.popup-content')
  clickBtn.addEventListener('click', () => {
    popupContent.classList.toggle('disappear')
  })
</script>



{% schema %}
{
  "name": "Popup Feature",
  "settings": [
    {
     "type": "text",
     "label": "Button Label",
     "id": "button_label"
    },
    {
     "type": "richtext",
     "label": "Paragraph",
     "id": "paragraph"
    }
  ]
}
{% endschema %}

